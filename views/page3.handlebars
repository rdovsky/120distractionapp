<body>

	<div id="timer" align=center>
	    <h3>Time Elapsed</h3>
	    <h4>Hr Min Sec</h4>

    	<!--timer placeholder-->
        <h2 data-chronometer>00:00:00</h2>
        <button id="play">Play</button>
        <button id="pause">Pause</button>
        <button id="reset">Reset</button>
        <br><br>

        {{#if viewAlt}}
